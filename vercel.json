{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "client/build" }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/server.js"
      },
      {
        "src": "/socket.io/(.*)",
        "dest": "/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/client/build/index.html"
      }
    ]
  }
  